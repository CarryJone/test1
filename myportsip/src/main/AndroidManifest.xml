<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gao.bryan.myportsip">

    <!-- 網路功能存取權限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 網路狀態 權限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 相機 圖片 存取 權限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 在SDCard中創建與刪除檔許可權 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard寫入資料許可權 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- SIP Permission -->
    <!-- 允許程式存取Wi-Fi網路狀態訊息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允許應用改變網絡的連接狀態 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 允許應用改變Wi-Fi的連接狀態 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 允許應用禁用鍵盤鎖 -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <!-- 允許應用修改全局音頻設定 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RAISED_THREAD_PRIORITY" />
    <!-- 允許應用接收在系統完成啟動後發出的ACTION_BOOT_COMPLETED廣播信息 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 允許應用記錄音頻信息 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 允許應用使用TYPE_SYSTEM_ALERT來打開窗口，並將窗口顯示於其他應用的頂端 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 允許應用訪問震動器 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 允許使用電源鎖定管理以使進程休眠或屏幕變暗 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- End of SIP Permission -->


    <!-- GCM permission -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission android:name="${applicationId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <!-- End of GCM permission -->


    <!-- Sip User Feature Setting -->
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.telephony" android:required="false" />
    <!-- End of Sip User Feature Setting -->


    <!-- Badge Permission -->
    <!-- for android badge -->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="com.android.launcher.permission.WRITE_SETTINGS" />
    <!-- for htc badge -->
    <uses-permission android:name="com.htc.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="com.htc.launcher.permission.UPDATE_SHORTCUT" />
    <!-- for MOTO badge -->
    <uses-permission android:name="com.teslacoilsw.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.teslacoilsw.launcher.permission.READ_SETTINGS" />
    <!-- for Samsung badge -->
    <uses-permission android:name="com.sec.android.provider.badge.permission.READ" />
    <uses-permission android:name="com.sec.android.provider.badge.permission.WRITE" />
    <!-- for sony badge -->
    <uses-permission android:name="com.sonyericsson.home.permission.BROADCAST_BADGE" />
    <!-- for apex badge -->
    <uses-permission android:name="com.anddoes.launcher.permission.UPDATE_COUNT" />

    <!-- End of Badge Permission -->
    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>